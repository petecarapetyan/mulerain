<!doctype html>
{% block htmlTag %}
<html lang="{{site.lang}}" dir="{{site.dir}}">
{% endblock htmlTag %}

  <head>
    {% block headContent %}
      {% include 'partials/head-content.njk' %}
    {% endblock %}
  </head>

  {% block bodyTag %}
  <body layout="{{layoutName}}">
  {% endblock bodyTag %}

    {% block header %}
      {% include 'partials/header.njk' %}
    {% endblock header%}

    <div id="content-wrapper">
      <div class="content-area">
        {% block sidebar %}{% endblock sidebar %}

        {% block main %}
          {{ content.html | safe }}
        {% endblock main %}
      </div>
    </div>

  </body>
</html>
